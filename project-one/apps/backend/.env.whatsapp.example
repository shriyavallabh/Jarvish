# WhatsApp Business Cloud API Configuration
# Copy this file to .env and fill in your actual values

# Facebook App Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
WHATSAPP_BUSINESS_ID=your_whatsapp_business_id
WHATSAPP_API_VERSION=v20.0

# Primary WhatsApp Numbers (for 150-300 advisors)
WHATSAPP_PRIMARY_NUMBER_1_ID=phone_number_id_1
WHATSAPP_PRIMARY_NUMBER_1_TOKEN=access_token_1
WHATSAPP_PRIMARY_NUMBER_1_PHONE=919999999999

WHATSAPP_PRIMARY_NUMBER_2_ID=phone_number_id_2
WHATSAPP_PRIMARY_NUMBER_2_TOKEN=access_token_2
WHATSAPP_PRIMARY_NUMBER_2_PHONE=919999999998

# Backup WhatsApp Numbers (for quality protection)
WHATSAPP_BACKUP_NUMBER_1_ID=backup_phone_number_id_1
WHATSAPP_BACKUP_NUMBER_1_TOKEN=backup_access_token_1
WHATSAPP_BACKUP_NUMBER_1_PHONE=919999999997

# Webhook Configuration
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_secure_verify_token_here
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhook/whatsapp/messages
WHATSAPP_APP_SECRET=your_app_secret_for_signature_verification

# Delivery Configuration
DELIVERY_TIME_IST=06:00:00
DELIVERY_WINDOW_MINUTES=5
DELIVERY_JITTER_MS=20
DELIVERY_CONCURRENCY=50
DELIVERY_MAX_RETRIES=3
DELIVERY_SLA_TARGET=0.99

# Quality Monitoring
QUALITY_CHECK_INTERVAL_MS=300000
QUALITY_ALERT_BLOCK_RATE=0.02
QUALITY_ALERT_REPORT_RATE=0.01
QUALITY_ALERT_FAILURE_RATE=0.05
QUALITY_MIN_RATING=MEDIUM

# Template Configuration
TEMPLATE_CATEGORY=UTILITY
TEMPLATE_LANGUAGES=en_US,hi_IN,mr_IN
TEMPLATE_APPROVAL_BUFFER_DAYS=5

# Redis Configuration (for queues)
REDIS_URL=redis://localhost:6379
REDIS_QUEUE_PREFIX=whatsapp

# Business Solution Provider (optional)
BSP_NAME=aisensy
BSP_API_KEY=your_bsp_api_key
BSP_API_SECRET=your_bsp_api_secret

# Monitoring & Alerts
ALERT_EMAIL=operations@yourcompany.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
MONITORING_ENABLED=true

# Feature Flags
ENABLE_MULTI_NUMBER_STRATEGY=true
ENABLE_QUALITY_MONITORING=true
ENABLE_TEMPLATE_ROTATION=true
ENABLE_AUTO_RECOVERY=true
ENABLE_A_B_TESTING=false

# Cost Tracking
COST_PER_UTILITY_MESSAGE_INR=0.125
COST_PER_MARKETING_MESSAGE_INR=0.88
MONTHLY_BUDGET_INR=10000

# Development/Testing
WHATSAPP_TEST_MODE=false
WHATSAPP_TEST_NUMBERS=919999999990,919999999991
LOG_LEVEL=info